#!/bin/bash
# Copyright (C) 2015 - Claudio Mignanti
#
# This is free software, licensed under the MIT license.
#

echo owrt-pkgtest - OpenWrt Package tester

#default values
arch=ar71xx
release=barrier_breaker
dir_package=`pwd`/
build_dir=/tmp/owrt-pkgtest

#parse command line
while [ $# -gt 0 ]; do
    case $1  in
        -a)
            arch=$2
            shift 2
        ;;
        -r)
            release=$2
            shift 2
        ;;
        -d)
            dir_package=$2/
            shift 1
        ;;
        -b)
            build_dir=$2
            shift 1
        ;;
        *)
            test_pkg=$1
            shift
        ;;
    esac
done

if [ -z $test_pkg ]; then
    echo "err: no package name provided. exiting"
    exit 1
fi

_downlod_sdk() {
    #SDKs url
    declare -A sdk_url
    sdk_url[barrier_breaker ar71xx]="https://downloads.openwrt.org/barrier_breaker/14.07/ar71xx/generic/OpenWrt-SDK-ar71xx-for-linux-x86_64-gcc-4.8-linaro_uClibc-0.9.33.2.tar.bz2"
    sdk_url[barrier_breaker atheros]="https://downloads.openwrt.org/barrier_breaker/14.07/atheros/generic/OpenWrt-SDK-atheros-for-linux-x86_64-gcc-4.8-linaro_uClibc-0.9.33.2.tar.bz2"
    sdk_url[barrier_breaker x86]="https://downloads.openwrt.org/barrier_breaker/14.07/x86/generic/OpenWrt-SDK-x86-for-linux-x86_64-gcc-4.8-linaro_uClibc-0.9.33.2.tar.bz2"

    #TODO update chaos_calmer urls after release (RC2 urls atm)
    sdk_url[chaos_calmer ar71xx]="https://downloads.openwrt.org/chaos_calmer/15.05-rc2/ar71xx/generic/OpenWrt-SDK-15.05-rc2-ar71xx-generic_gcc-4.8-linaro_uClibc-0.9.33.2.Linux-x86_64.tar.bz2"
    sdk_url[chaos_calmer ath25]="https://downloads.openwrt.org/chaos_calmer/15.05-rc2/ath25/generic/OpenWrt-SDK-15.05-rc2-ath25_gcc-4.8-linaro_uClibc-0.9.33.2.Linux-x86_64.tar.bz2"
    sdk_url[chaos_calmer x86]="https://downloads.openwrt.org/chaos_calmer/15.05-rc2/x86/generic/OpenWrt-SDK-15.05-rc2-x86-generic_gcc-4.8-linaro_uClibc-0.9.33.2.Linux-x86_64.tar.bz2"

    if [ ! -d $build_dir/owrt-sdk/ ]; then
        mkdir -p $build_dir/owrt-sdk/
    fi
    # download the sdk and extract it inside build_dir
    if [ ! -f $build_dir/sdk_${release}_${arch}.tar.bz2 ]; then
        wget ${sdk_url[${release} ${arch}]}  -O $build_dir/sdk_${release}_${arch}.tar.bz2
        tar xjf $build_dir/sdk_${release}_${arch}.tar.bz2 -C $build_dir/owrt-sdk/ --strip-components=1
    fi
}

_add_package2test() {
    cp -fr $dir_package $build_dir/owrt-sdk/pkg
    cp $build_dir/owrt-sdk/feeds.conf.default $build_dir/owrt-sdk/feeds.conf
    echo "src-link testing $build_dir/owrt-sdk/pkg" >> $build_dir/owrt-sdk/feeds.conf
    $build_dir/owrt-sdk/scripts/feeds update
    $build_dir/owrt-sdk/scripts/feeds list -r testing
    $build_dir/owrt-sdk/scripts/feeds install -a -p testing -d y
}

_downlod_sdk

_add_package2test

make -C $build_dir/owrt-sdk package/$test_pkg/compile V=s

exit $?
